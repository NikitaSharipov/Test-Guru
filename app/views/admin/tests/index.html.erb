<%= render 'shared/errors', resource: @test %>

<table class="table table-bordered table-hover text-center">
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
    <th><%= t('.level') %></th>
    <th><%= t('.category') %></th>
    <th><%= t('.author') %></th>
    <th><%= t('.question_count') %></th>
    <th colspan="3"><%= t('.action') %></th>
  </tr>

  <%= render Test.all %>

</table>

<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-info" %>
  <%= link_to t('.gist'), admin_gists_path, class: "btn btn-info" %>
  <%= link_to t('.badge'), admin_badges_path, class: "btn btn-info" %>
</p>
