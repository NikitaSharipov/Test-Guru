<%= form_with model: @feedback, local: true do |form| %>
  <%= render 'shared/errors', resource: @feedback %>

<h2>Обратная связь</h2>

<p>
  <%= form.label :title  %><br>
  <%= form.text_area :title, id: :feedback_title, rows: 1, cols: 20 %>
</p>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body, id: :feedback_body, rows: 7, cols: 60 %>
</p>

<p><%= form.submit 'Отправить' %></p>

<% end %>
